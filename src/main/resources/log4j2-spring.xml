<Configuration>
    <Appenders>

       <Console name="console" target="SYSTEM_OUT">
           <PatternLayout
                   pattern="%msg%n"
           >
           </PatternLayout>
       </Console>

    </Appenders>
    <Loggers>

        <Root level="debug">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>